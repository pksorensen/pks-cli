# Set default behavior to automatically normalize line endings
* text=auto eol=lf

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout
*.cs text eol=lf
*.csproj text eol=lf
*.sln text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.config text eol=lf
*.props text eol=lf
*.targets text eol=lf
*.resx text eol=lf
*.settings text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# PowerShell scripts
*.ps1 text eol=crlf
*.psm1 text eol=crlf
*.psd1 text eol=crlf

# Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Docker files
Dockerfile* text eol=lf
*.dockerfile text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# VS Code settings
*.code-workspace text eol=lf

# Development container files
devcontainer.json text eol=lf

# Declare files that will always have CRLF line endings on checkout
*.sln merge=ours

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.7z binary
*.tar binary
*.gz binary
*.rar binary
*.dll binary
*.exe binary
*.msi binary
*.pdb binary
*.lib binary
*.nupkg binary
*.snupkg binary

# Font files
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary