{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "./hooks/smart-dispatcher.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "./hooks/post-execution-validator.sh"
          }
        ]
      }
    ]
  },
  "smartDispatcher": {
    "enabled": true,
    "performanceMode": true,
    "skipPatterns": ["ls", "pwd", "cd", "echo", "cat", "grep"],
    "executePatterns": ["build", "deploy", "test", "npm", "dotnet", "docker"]
  },
  "project": {
    "name": "{{ProjectName}}",
    "description": "{{Description}}",
    "template": "{{Template}}"
  }
}