<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    
    <!-- Template Package Properties -->
    <PackageType>Template</PackageType>
    <PackageId>PKS.Templates.ClaudeDotNet10.Full</PackageId>
    <PackageVersion>1.0.0</PackageVersion>
    <Title>PKS Claude .NET 10 Full-Featured DevContainer Template</Title>
    <Authors>PKS CLI Team</Authors>
    <Owners>pksorensen</Owners>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/pksorensen/pks-cli</PackageProjectUrl>
    <Description>Full-featured Claude-optimized .NET 10 development container template for PKS CLI projects. Provides a comprehensive development environment with advanced AI integration, extensive tooling, and enterprise-grade features for .NET 10 development.</Description>
    <PackageSummary>Full-featured Claude .NET 10 DevContainer template with advanced AI capabilities and comprehensive tooling</PackageSummary>
    <PackageReleaseNotes>Initial release of PKS Claude .NET 10 Full-Featured DevContainer template</PackageReleaseNotes>
    <PackageTags>pks-templates devcontainer docker template pks-cli dotnet10 claude-code ai-development full-featured development-environment vscode</PackageTags>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/pksorensen/pks-cli.git</RepositoryUrl>
    <RepositoryBranch>main</RepositoryBranch>
    
    <!-- Template Specific Properties -->
    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>content</ContentTargetFolders>
    <NoWarn>$(NoWarn);NU5128;NU5119</NoWarn>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
    <NoDefaultExcludes>true</NoDefaultExcludes>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="content/**/*" Pack="true" PackagePath="content/" />
    <Content Include=".template.config/**/*" Pack="true" PackagePath="content/.template.config/" />
    <!-- Explicitly include .env and .gitignore files that might be excluded by default -->
    <Content Include="content/.devcontainer/.env" Pack="true" PackagePath="content/.devcontainer/" />
    <Content Include="content/.devcontainer/.gitignore" Pack="true" PackagePath="content/.devcontainer/" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="content/README.md" />
  </ItemGroup>

</Project>