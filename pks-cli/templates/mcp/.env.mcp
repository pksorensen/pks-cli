# MCP Configuration Environment Variables for {{ProjectName}}
# Copy this file to .env and configure your specific values

# Local Development Configuration
{{MCP.EnvPrefix}}_LOG_LEVEL=Information
{{MCP.EnvPrefix}}_CONFIG_PATH=./config
{{MCP.EnvPrefix}}_WORK_DIR=./
DOTNET_ENVIRONMENT=Development

# Remote Server Configuration (SSE)
{{MCP.EnvPrefix}}_SERVER_URL={{MCP.ServerUrl}}
{{MCP.EnvPrefix}}_API_KEY=your_api_key_here
{{MCP.EnvPrefix}}_CLIENT_ID=your_oauth_client_id
{{MCP.EnvPrefix}}_CLIENT_SECRET=your_oauth_client_secret

# MCP-Specific Settings
{{MCP.EnvPrefix}}_MCP_LOG_LEVEL=info
{{MCP.EnvPrefix}}_MCP_TIMEOUT=30000
{{MCP.EnvPrefix}}_MCP_RETRIES=3

# Security Settings
{{MCP.EnvPrefix}}_ALLOW_REMOTE_SERVERS=false
{{MCP.EnvPrefix}}_ALLOW_FILE_ACCESS=true
{{MCP.EnvPrefix}}_ALLOW_NETWORK_ACCESS=false
{{MCP.EnvPrefix}}_VALIDATE_SSL=true

# Tool-Specific Configuration
{{MCP.EnvPrefix}}_TOOLS={{MCP.Tools}}
{{MCP.EnvPrefix}}_DEFAULT_TEMPLATE=console
{{MCP.EnvPrefix}}_AUTO_SCALE_ENABLED=false
{{MCP.EnvPrefix}}_MONITORING_ENABLED=true

# Advanced Configuration
{{MCP.EnvPrefix}}_CONNECT_TIMEOUT=10000
{{MCP.EnvPrefix}}_READ_TIMEOUT=30000
{{MCP.EnvPrefix}}_MAX_CONCURRENT_CONNECTIONS=5
{{MCP.EnvPrefix}}_RECONNECT_INTERVAL=5000
{{MCP.EnvPrefix}}_MAX_RECONNECT_ATTEMPTS=10